<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="helloDialog"
      title="Hello {/recipient/name}">
      <core:Icon
            src="sap-icon://hello-world"
            size="6rem"
            class="sapUiMediumMargin"/>
      <beginButton>
        <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"/>
      </beginButton>
      <endButton>
        <Button
                text="{i18n>dialogOpneButtonText}"
                press=".onReopenDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>